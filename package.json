{
  "name": "pytastic",
  "displayName": "PyTastic",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "custom-activitybar",
          "title": "PyTastic",
          "icon": "assets/test-data-svgrepo-com.svg"
        }
      ]
    },
    "chatParticipants": [
      {
        "id": "vscode-testing-chat",
        "name": "python-tester",
        "description": "Specialised chat for building and editing good testing infrastructure"
      }
    ],
    "views": {
      "custom-activitybar": [
        {
          "type": "webview",
          "id": "dashboard.openview",
          "name": "Dashboard",
          "contextualTitle": "View"
        },
        {
          "type": "tree",
          "id": "dashboard.treeview",
          "name": "Dependency Tree View",
          "contextualTitle": "Tree"
        },
        {
          "type": "tree",
          "id": "dashboard.failingtreeview",
          "name": "Failing Tests",
          "contextualTitle": "Failing Tests"
        }
      ]
    },
    "commands": [
      {
        "command": "dashboard.openview",
        "title": "Sidebar View"
      },
      {
        "command": "dashboard.menu.view",
        "category": "vscode-extension-sidebar-html",
        "title": "Sample WebView in VS Code Sidebar",
        "icon": "$(clear-all)"
      },
      {
        "command": "vscode-run-tests.runTests",
        "title": "Run Tests"
      },
      {
        "command": "vscode-run-tests.updateResults",
        "title": "Update Results"
      },
      {
        "command": "vscode-run-tests.getCoverage",
        "title": "Get Coverage"
      },
      {
        "command": "vscode-run-tests.updateCoverage",
        "title": "Update Coverage Results"
      },
      {
        "command": "vscode-slowest-tests.slowestTests",
        "title": "Find Slowest Tests"
      },
      {
        "command": "vscode-slowest-tests.updateSlowestTests",
        "title": "Update Slowest Tests Results"
      },
      {
        "command": "vscode-run-tests.getMemory",
        "title": "Get Memory"
      },
      {
        "command": "vscode-run-tests.updateMemory",
        "title": "Update Memory Results"
      },
      {
        "command": "code-tutor.annotate",
        "title": "Test Insights"
      },
      {
        "command": "fix-failing-tests.fixFailingTests",
        "title": "Fix Failing Tests"
      },
      {
        "command": "fix-coverage.fixCoverage",
        "title": "Fix Coverage"
      },
      {
        "command": "optimise-slowest.optimiseSlowest",
        "title": "Optimise Slowest Tests"
      },
      {
        "command": "dependencies.getDependencies",
        "title": "Get Dependencies"
      },
      {
        "command": "dependencies.refreshView",
        "title": "Refresh Dependencies View"
      },
      {
        "command": "generate-pydoc.generatePydoc",
        "title": "Generate Pydoc"
      },
      {
        "command": "extension.acceptSuggestion",
        "title": "Accept Annotation onto corresponding test file for coverage"
      },
      {
        "command": "extension.rejectSuggestion",
        "title": "Reject Annotation"
      },
      {
        "command": "extension.addSuggestiontoSameFile",
        "title": "Add Annotation to Same File"
      },
      {
        "command": "extension.addSuggestiontoMainFile",
        "title": "Add Annotation to corresponding Main File"
      },
      {
        "command": "test-history.showPassFailGraph",
        "title": "Show test pass-fail history graph"
      },
      {
        "command": "test-history.showCoverageGraph",
        "title": "Show coverage history graph"
      },
      {
        "command": "test-history.showGraph",
        "title": "Show Graph"
      },
      {
        "command": "extension.openSettings",
        "title": "Open Settings",
        "icon": "$(gear)"
      },
      {
        "command": "optimise-memory.optimiseMemory",
        "title": "Optimise Memory Usage of Tests"
      },
      {
        "command": "failingtests.refreshView",
        "title": "Refresh Failing Tests"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "extension.openSettings",
          "when": "view == dashboard.openview",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "code-tutor.annotate",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "PyTastic",
      "properties": {
        "pytastic.runNecessaryTestsOnly": {
          "type": "boolean",
          "default": true,
          "description": "Run only necessary tests instead of all tests."
        },
        "pytastic.copilotEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable GitHub Copilot integration."
        },
        "pytastic.codeCoverageHighlighting": {
          "type": "boolean",
          "default": true,
          "description": "Enable code coverage highlighting."
        },
        "pytastic.numberOfSlowestTests": {
          "type": "number",
          "default": 5,
          "description": "Number of slowest tests to display."
        },
        "pytastic.numberOfMemoryProfilingTests": {
          "type": "number",
          "default": 5,
          "description": "Number of tests to use for memory profiling. (0 for all tests)"
        },
        "pytastic.snapshotInterval": {
          "type": "number",
          "default": 10,
          "description": "Snapshot interval in minutes. (Extension restart required)"
        },
        "pytastic.runTestsOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run tests on any file save."
        },
        "pytastic.runTestsInBackground": {
          "type": "boolean",
          "default": true,
          "description": "Periodically run tests in the background."
        },
        "pytastic.customLLM Endpoint": {
          "type": "string",
          "default": "http://localhost:8000/v1/chat/completions",
          "description": "Custom LLM endpoint to use if GitHub Copilot is not enabled."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && cp src/test-runner/function-splitter.py out/test-runner/function-splitter.py && cp src/test-runner/test-extractor.py out/test-runner/test-extractor.py",
    "compile": "tsc -p ./ && cp src/test-runner/function-splitter.py out/test-runner/function-splitter.py && cp src/test-runner/test-extractor.py out/test-runner/test-extractor.py",
    "watch": "tsc -watch -p ./ && cp src/test-runner/function-splitter.py out/test-runner/function-splitter.py && cp src/test-runner/test-extractor.py out/test-runner/test-extractor.py",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "chartjs-plugin-doughnutlabel": "^2.0.3"
  }
}